	"name": "browser-extension-examples",
    "build": {
        "dockerfile": "Dockerfile"
    },
	"customizations": {
		"vscode": {
            "extensions": ["esbenp.prettier-vscode"],
			"settings": {
                "git.path": "/user/bin/git",
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode"       
                    }
		}
	}
